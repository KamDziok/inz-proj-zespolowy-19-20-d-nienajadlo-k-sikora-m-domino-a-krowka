<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.ToggleButtonGroup?>
<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="321.0" prefWidth="361.0" 
            styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="FXML.LoginController">
    <stylesheets>
        <URL value="@login.css" />
    </stylesheets>
   <children>
      <Pane layoutX="4.0" prefHeight="418.0" prefWidth="391.0">
         <children>
            <PasswordField fx:id="passwd" layoutX="114.0" layoutY="170.0"
                           prefHeight="30.0" prefWidth="203.0"
                           promptText="Enter your password">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>
            <Label layoutX="21.0" layoutY="170.0" prefHeight="30.0" 
                   prefWidth="75.0" text="Hasło:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="21.0" layoutY="119.0" prefHeight="30.0"
                   prefWidth="60.0" text="Login:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" layoutX="81.0" layoutY="48.0" 
                   prefHeight="30.0" prefWidth="203.0" text="HURTOWNIA">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Button fx:id="zalogujbtn" layoutX="71.0" layoutY="291.0" 
                    mnemonicParsing="false" onAction="#LogInAction" 
                    prefHeight="34.0" prefWidth="256.0" text="Zaloguj">
               <font>
                  <Font size="13.0" />
               </font></Button>
            <Label fx:id="status" layoutX="78.0" layoutY="20.0" 
                   prefHeight="17.0" prefWidth="217.0" textFill="#d33010">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="login" layoutX="114.0" layoutY="122.0" 
                       prefHeight="30.0" prefWidth="203.0" 
                       promptText="Enter your login">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <ToggleButtonGroup fx:id="group" layoutX="103.0" layoutY="235.0" 
                               prefHeight="20.0" prefWidth="203.0" 
                               selectionType="SINGLE">
                <toggles>
                  <RadioButton fx:id="klientR" mnemonicParsing="false" 
                               prefHeight="20.0" prefWidth="85.0" text="Klient">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="pracownikR" mnemonicParsing="false" 
                               prefHeight="20.0" prefWidth="103.0"
                               text="Obsługa">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>
                </toggles>
            </ToggleButtonGroup>
            <JFXButton fx:id="forgotPasswordBtn" layoutX="20.0" layoutY="364.0" 
                       onAction="#PrzypomnienieHaslaOnAction" prefHeight="32.0" 
                       prefWidth="153.0" text="Nie pamiętasz hasła?" />
            <JFXButton fx:id="rejestracjaH" layoutX="223.0" layoutY="364.0" 
                       onAction="#RejestracjaAction" prefHeight="32.0" 
                       prefWidth="159.0" text="Zarejestruj się teraz!" />
         </children>
      </Pane>
   </children>
</AnchorPane>
